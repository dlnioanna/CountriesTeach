<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_top_margin"
        android:orientation="vertical">

        <TextView
            style="@style/chooseContinentTextView"
            android:text="@string/choose_contintent_text" />

        <ScrollView
            android:id="@+id/questions_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:id="@+id/continent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/europe_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_europe"
                    android:text="@string/europe_string"
                    tools:text="Europe" />

                <Button
                    android:id="@+id/america_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_america"
                    android:text="@string/america_string"
                    tools:text="America" />

                <Button
                    android:id="@+id/asia_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_asia"
                    android:text="@string/asia_string"
                    tools:text="Asia" />

                <Button
                    android:id="@+id/africa_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_africa"
                    android:text="@string/africa_string"
                    tools:text="Africa" />

                <Button
                    android:id="@+id/oceania_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_oceania"
                    android:text="@string/oceania_string"
                    tools:text="Oceania" />

                <Button
                    android:id="@+id/world_button"
                    style="@style/continentButtonLayout"
                    android:background="@drawable/button_all_continents"
                    android:text="@string/world_string"
                    tools:text="Î…World" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>