<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="answerButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_answers</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_margin</item>
    </style>
    <style name="nextButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>
    <style name="europeButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_europe</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>
</resources>