<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="answerButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_answers</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_margin</item>
    </style>
    <style name="nextButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>
    <style name="continentButtonLayout" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/continent_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/continent_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/continent_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/continent_margin_top_bottom</item>
    </style>
    <style name="chooseContinentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/welcome_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/welcome_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/welcome_text_margin</item>
    </style>
</resources>